@model IEnumerable<WebApplication2.Models.Budget>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Budget</h1>

@*<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SumOfBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentageOfPremium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SumOfBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentageOfPremium)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
@*                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
