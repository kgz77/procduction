@using System.Net
@model WebApplication2.Models.Budget

@{

    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<h1>Create</h1>

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SumOfBudget" class="control-label"></label>
                <input asp-for="SumOfBudget" class="form-control" />
                <span asp-validation-for="SumOfBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentageOfPremium" class="control-label"></label>
                <input asp-for="PercentageOfPremium" class="form-control" />
                <span asp-validation-for="PercentageOfPremium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label"></label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-warning" asp-action="Index">Back to List</a>
</div>

